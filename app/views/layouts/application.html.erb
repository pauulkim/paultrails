<!DOCTYPE html>
<html>
  <head>
    <title>Paultrails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= favicon_link_tag asset_path('mountain.png') %>
      
    <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=" %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <script src="https://kit.fontawesome.com/d136e8f6b6.js" crossorigin="anonymous"></script>

    <meta property="og:title" content="Paultrails" />
     <meta property='og:image' content="<%= image_url('paultrails.jpg') %>"/>
     <meta property="og:description"
       content="A fullstack clone of Alltrails, a hiking app"
     />
     <meta property="og:url"
       content="https://paultrails.herokuapp.com/"
     />
  </head>

  <body>
    <%= yield %>
  </body>
</html>
